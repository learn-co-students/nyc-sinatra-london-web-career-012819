<form action="/figures" method="POST">

  <label> Name: </label>
  <input type="text" name="figure[name]" </input>

  <br>

  <h2>Titles</h2>

  <%@titles.each do |title|%>
    <input type="checkbox" name="figure[title_ids][]" id="<%=title.id%>" value="<%=title.id%>"><%=title.name%></input>
    <br>
  <%end%>

  <br>

  <h2>Create New Title:</h2>
  <input type="text" name="title[name]">

  <h2>Landmarks</h2>

  <%@landmarks.each do |landmark|%>
    <input type="checkbox" name="figure[landmark_ids][]" id="<%=landmark.id%>" value="<%=landmark.id%>"><%=landmark.name%></input>
    <br>
  <%end%>

  <br>

  <h2>Create New Landmark:</h2>
  <label>Name:</label>
  <input type="text" name="landmark[name]">
  <label>Year:</label>
  <input type="text" name="landmark[year]">
  <input type="submit" value="Create New Figure">
